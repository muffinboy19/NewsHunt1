<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The main background shape (this is the view without shadow) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color of the view -->
            <corners android:radius="14dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>


    <!-- The shadow layer -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp"> <!-- Adjust the shadow offset as needed -->
        <shape android:shape="rectangle">
            <solid android:color="#CAC9C9" /> <!-- Shadow color -->
            <corners android:radius="14dp" /> <!-- Adjust corner radius to match the background shape -->
        </shape>
    </item>

</layer-list>
